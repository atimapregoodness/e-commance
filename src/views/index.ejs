<%- layout("layout/boilerplate") %>

<main class="site-main container">
  <!-- Hero / Promo -->
  <section class="hero-grid">
    <div class="hero-left" data-aos="fade-right">
      <h1 class="hero-title">Luxury Wig Installations & Styling</h1>
      <p class="hero-sub">
        Professional stylists • Premium human hair • Convenient online booking
      </p>

      <div class="hero-cta">
        <a href="/booking" class="btn btn-primary"
          ><i class="fas fa-calendar-check"></i> Book Now</a
        >
        <a href="#services" class="btn btn-outline">View Services</a>
      </div>

      <ul class="hero-features">
        <li><i class="fas fa-shield-alt"></i> Secure payments</li>
        <li><i class="fas fa-head-side-mask"></i> Hygienic studio</li>
        <li><i class="fas fa-star"></i> 5★ rated stylists</li>
      </ul>
    </div>

    <div class="hero-right" data-aos="fade-left">
      <div class="promo-card">
        <div class="promo-track" id="promoTrack">
          <img src="/images/hero-wig.jpg" alt="Promo Image 1" />
          <img src="/images/hero-wig2.jpg" alt="Promo Image 2" />
          <img src="/images/hero-wig3.jpg" alt="Promo Image 3" />
          <img src="/images/hero-wig4.jpg" alt="Promo Image 4" />
          <img src="/images/hero-wig5.jpg" alt="Promo Image 5" />
        </div>
        <div class="promo-badge">Free Consult</div>
        <div class="promo-dots" id="promoDots"></div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="why-us" id="why" data-aos="fade-up">
    <h2>Why Choose <span>Gloriousstylist</span>?</h2>
    <div class="why-grid">
      <div class="why-card">
        <i class="fas fa-crown"></i>
        <h4>Luxury Service</h4>
        <p>We use only premium-quality human hair for flawless results.</p>
      </div>
      <div class="why-card">
        <i class="fas fa-user-shield"></i>
        <h4>Trusted Professionals</h4>
        <p>Certified stylists with years of experience in wig installations.</p>
      </div>
      <div class="why-card">
        <i class="fas fa-broom"></i>
        <h4>Clean & Hygienic</h4>
        <p>Our studio follows strict hygiene protocols for your safety.</p>
      </div>
      <div class="why-card">
        <i class="fas fa-heart"></i>
        <h4>Customer Satisfaction</h4>
        <p>Our happy clients keep coming back — your beauty is our passion.</p>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="services" id="services" data-aos="fade-up">
    <h2>Our Services</h2>
    <div class="services-grid">
      <div class="service-card" data-aos="fade-up" data-aos-delay="100">
        <i class="fas fa-head-side-mask"></i>
        <h4>Frontal Wig Installation & Styling</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="200">
        <i class="fas fa-leaf"></i>
        <h4>Glueless Frontal Wig Installation</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="300">
        <i class="fas fa-braille"></i>
        <h4>Closure Wig Installation & Styling</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="400">
        <i class="fas fa-venus-mars"></i>
        <h4>Ponytail Frontal Installation</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="500">
        <i class="fas fa-leaf"></i>
        <h4>Natural Hair Ponytail</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="600">
        <i class="fas fa-home"></i>
        <h4>Home Service Frontal Wig</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="700">
        <i class="fas fa-heart"></i>
        <h4>Bridal Styling & Touchup</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="800">
        <i class="fas fa-circle-notch"></i>
        <h4>2 Frontal / 360 Frontal Installation</h4>
      </div>
      <div class="service-card" data-aos="fade-up" data-aos-delay="900">
        <i class="fas fa-ellipsis-h"></i>
        <h4>And more...</h4>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials" id="testimonials" data-aos="fade-up">
    <h2>What Our Clients Say</h2>
    <div class="testimonial-cards">
      <div class="testimonial-card">
        <p>
          <i class="fas fa-quote-left"></i> Absolutely the best stylist in
          Lagos! My wig looked brand new. <i class="fas fa-quote-right"></i>
        </p>
        <h5>- Ada, Lekki Phase 1</h5>
      </div>
      <div class="testimonial-card">
        <p>
          <i class="fas fa-quote-left"></i> Professional service, clean studio,
          and very friendly. Highly recommend!
          <i class="fas fa-quote-right"></i>
        </p>
        <h5>- Chiamaka, VI</h5>
      </div>
      <div class="testimonial-card">
        <p>
          <i class="fas fa-quote-left"></i> My bridal styling was perfect —
          everyone loved it! <i class="fas fa-quote-right"></i>
        </p>
        <h5>- Ifeoma, Surulere</h5>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq" id="faq" data-aos="fade-up">
    <h2>Frequently Asked Questions</h2>
    <div class="faq-item" data-aos="fade-right">
      <h4>Do I need an appointment?</h4>
      <p>
        Yes, appointments are recommended to ensure availability of our
        stylists.
      </p>
    </div>
    <div class="faq-item" data-aos="fade-right" data-aos-delay="100">
      <h4>Do you offer home service?</h4>
      <p>
        Yes, home service is available for select wig installations, prices vary
        with location.
      </p>
    </div>
    <div class="faq-item" data-aos="fade-right" data-aos-delay="200">
      <h4>Is my payment secure?</h4>
      <p>
        All payments are processed securely through trusted payment methods.
      </p>
    </div>
  </section>
</main>

<!-- AOS Library for Animations -->
<link
  href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({
    duration: 1000,
    once: true,
  });
</script>
