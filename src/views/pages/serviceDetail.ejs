<h2><%= service.name %></h2>
<% if (service.image) { %>
<img src="<%= service.image %>" alt="<%= service.name %>" />
<% } %>
<p><%= service.description %></p>
<p>Price: N<%= service.price %></p>
<% if (typeof user !== 'undefined') { %>
<a href="/bookings/<%= service._id %>/book">Book Now</a>
<% } else { %>
<p>
  Please <a href="/auth/login">login</a> or
  <a href="/auth/register">register</a> to book.
</p>
<% } %>
<h3>Ratings</h3>
<form action="/ratings/<%= service._id %>/rate" method="POST">
  <label>Rating (1-5):</label>
  <input type="number" name="rating" min="1" max="5" required />
  <label>Comment:</label>
  <textarea name="comment"></textarea>
  <button type="submit">Submit Rating</button>
</form>
<ul>
  <% if (service.ratings) { service.ratings.forEach(rating => { %>
  <li><%= rating.rating %> stars - <%= rating.comment %></li>
  <% }) } %>
</ul>
