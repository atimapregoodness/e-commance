<header class="site-header">
  <!-- Brand -->
  <div class="brand-section">
    <a href="/" class="brand">
      <span class="brand-main">Glorious</span>
      <span class="brand-accent">Stylist</span>
      <span class="brand-address"
        >47b Adebayo Doherty Road, Lekki Phase 1, Lagos</span
      >
    </a>
  </div>

  <div class="header-row">
    <!-- Search -->
    <form
      action="/services"
      method="GET"
      class="search-form"
      role="search"
      aria-label="Search services"
    >
      <input
        name="q"
        type="search"
        placeholder="Search services, styles, wigs..."
        aria-label="Search"
      />
      <button type="submit" aria-label="Search">
        <i class="fas fa-search"></i>
      </button>
    </form>

    <!-- Header Actions -->
    <div class="header-actions">
      <button class="icon-btn" aria-label="Wishlist">
        <i class="far fa-heart"></i>
      </button>
      <button id="cartBtn" class="icon-btn cart-btn" aria-label="Cart">
        <i class="fas fa-shopping-bag"></i>
        <span id="cartCount" class="cart-count">0</span>
      </button>

      <!-- Mobile toggle -->
      <button class="mobile-toggle" aria-label="Toggle menu">
        <i class="fas fa-bars"></i>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <nav class="main-nav desktop-nav" id="desktop-nav">
      <a class="<%= currentPage === '/' ? 'active' : '' %>" href="/">Home</a>
      <a
        class="<%= currentPage.startsWith('/services') ? 'active' : '' %>"
        href="/services"
        >Services</a
      >
      <a
        class="<%= currentPage === '/contact' ? 'active' : '' %>"
        href="/contact"
        >Contact</a
      >
      <% if (!user) { %>
      <a href="/auth/login">Login</a>
      <a href="/auth/register" class="btn">Sign up</a>
      <% } else { %>
      <a href="/user/profile">My Account</a>
      <% if (user.role === 'admin') { %>
      <a href="/admin">Admin</a>
      <% } %>
      <a href="/auth/logout">Logout</a>
      <% } %>
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <nav class="main-nav mobile-nav" id="mobile-nav">
    <a class="<%= currentPage === '/' ? 'active' : '' %>" href="/">Home</a>
    <a
      class="<%= currentPage.startsWith('/services') ? 'active' : '' %>"
      href="/services"
      >Services</a
    >
    <a class="<%= currentPage === '/contact' ? 'active' : '' %>" href="/contact"
      >Contact</a
    >
    <% if (!user) { %>
    <a href="/auth/login">Login</a>
    <a href="/auth/register" class="btn">Sign up</a>
    <% } else { %>
    <a href="/user/profile">My Account</a>
    <% if (user.role === 'admin') { %>
    <a href="/admin">Admin</a>
    <% } %>
    <a href="/auth/logout">Logout</a>
    <% } %>
  </nav>
</header>

<div class="nav-overlay"></div>
